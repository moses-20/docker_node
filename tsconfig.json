{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "baseUrl": "./src",
    "outDir": "./dist",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
  },
  "tsc-alias": {
    "declaration": false
  },
  "include": [
    "./src/**/*",
  ],
  "exclude": [
    "./src/**/*.test.ts",
    "./src/**/*.spec.ts"
  ]
}
